<%- include ('../partials/header'); %>


<section class="jumbotron text-center">
    <h1>Create new order: <%= order.id %> </h1>
</section>
<% if(car){ %>
<div class="container">
    <h2>Customer</h2>
    <p>
        Name: <%= car.owner.name %><br>
        Car: <%= car.make %> <%= car.model %><br>
        Reg.No: <%= car.regno %><br>
    </p>
</div>
<% } %>
<% if(car === null) { %>
<div class="container">
    <div class="form-group">
        <input type="text" id="search" class="form-control" placeholder="Enter numberplate here..." autocomplete="off">
        <div id="match-list"></div>
    </div>
</div>
<% } %>
<div class="container">
    <form action="/orders" method="POST">
        <% if(car){ %>
        <input type="hidden" name="newOrder[regno]" value="<%= car.regno %>">
        <% } %>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="newOrder[name]">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<%- include ('../partials/footer'); %>
<script>orderSearch()</script>