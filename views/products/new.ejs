<%- include ('../partials/header') %>

<section class="jumbotron text-center">
    <h1>New Product</h1>
</section>
<section class="container">
    <form action="/products" method="POST">
        <div class="form-group">
            <label for="name">Product name</label>
            <input class="form-control" type="text" id="name" name="product[name]">
        </div>
        <div class="form-group">
            <label for="shortcode">Product Shortcode</label>
            <input class="form-control" type="text" id="shortcode" name="product[shortcode]">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input class="form-control" type="number" id="price" name="product[price]">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</section>

<%- include ('../partials/footer') %>