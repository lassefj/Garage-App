<%- include ('../partials/header') %>

<section class="jumbotron text-center">
    <h1>Create new customer</h1>
</section>
<div class="container">
    <form action="/customers" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="customer[name]">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="customer[email]">
        </div>
        <div class="form-group">
            <label for="name">Numberplate</label>
            <input type="text" class="form-control" id="name" name="customer[numberplate]">
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" id="name" name="customer[description]">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include ('../partials/footer') %>