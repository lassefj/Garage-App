<%- include ('../partials/header') %>

<section class="jumbotron text-center">
    <h1>Edit customer: <%= foundCustomer.name %> </h1>
</section>
<div class="container">
    <form action="/customers/<%= foundCustomer._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="customer[name]" value="<%= foundCustomer.name %>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="customer[email]"
                value="<%= foundCustomer.email %>">
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="number" class="form-control" id="phone" name="customer[phone]"
                value="<%= foundCustomer.phone %>">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="customer[address]"
                value="<%= foundCustomer.address %>">
        </div>
        <div class="form-group">
            <label for="zip">Zip code</label>
            <input type="number" class="form-control" id="zip" name="customer[zip]" value="<%= foundCustomer.zip %>">
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" class="form-control" id="city" name="customer[city]" value="<%= foundCustomer.city %>">
        </div>
        <div class="form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" id="name" name="customer[description]"
                value="<%= foundCustomer.description %>">
        </div>
        <button type="submit" class="btn btn-primary">Make change</button>
    </form>
</div>

<%- include ('../partials/footer') %>