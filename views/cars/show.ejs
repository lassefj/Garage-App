<%- include ('../partials/header') %>
<section class="jumbotron text-center">
    <h1>Car: <%= car.make %> <%= car.model %> </h1>
</section>
<section class="container">
    <h2>Options</h2>
    <a href="/cars/<%= car._id %>/edit" class="btn btn-warning">EDIT</a>
    <form action="/cars/<%= car._id %>?_method=DELETE" method="POST" class="d-inline">
        <button type="submit" class="btn btn-danger d-inline">DELETE</button>
    </form>
    <hr>
    <h2><%= car.owner.name %></h2>
    <hr>
    <h2>Comments</h2>
    <hr>
    <% car.comments.forEach(function(comment){ %>
    <%= comment.text %>
    <% }) %>
    <hr>
    <form action="/cars/<%= car._id %>/comments" method="POST">
        <input type="text" name="text">
        <button type="submit">Send</button>
    </form>
</section>
<%- include ('../partials/footer') %>