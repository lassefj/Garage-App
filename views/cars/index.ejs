<%- include ('../partials/header') %>

<section class="jumbotron text-center">
    <h1>Cars</h1>
    <form action="/cars" method="GET" class="form-inline">
        <div class="form-group">
            <label for="property">Select property to search</label>
            <select class="form-control" id="property" name="drop">
                <option>RegNo</option>
                <option>Make</option>
                <option>Model</option>
            </select>
        </div>
        <div class="form-group mx-auto">
            <input type="text" name="search" placeholder="Car search..." class="form-control">
            <input type="submit" value="Search" class="btn btn-primary form-control">
        </div>
    </form>
</section>
<section class="container">
    <div class="row">
        <div class="col-3"><strong>Reg. No</strong></div>
        <div class="col-3"><strong>Make</strong></div>
        <div class="col-3"><strong>Model</strong></div>
        <div class="col-3"><strong>Owner</strong></div>
    </div>
    <% car.forEach(car => { %>
    <a href="/cars/<%= car._id %> ">
        <div class="row list-item">
            <div class="col-3"><%= car.regno %> </div>
            <div class="col-3"><%= car.make %> </div>
            <div class="col-3"><%= car.model %> </div>
            <div class="col-3"><%= car.owner.name %> </div>
        </div>
    </a>
    <% }); %>
</section>
<section class="container">


</section>

<%- include ('../partials/footer') %>