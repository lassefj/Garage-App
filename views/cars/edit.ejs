<%- include ('../partials/header') %>
<section class="jumbotron text-center">
    <h1>Edit car</h1>
</section>
<div class="container">
    <form action="/cars/<%= car._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="regno">Reg.No.</label>
            <input type="text" class="form-control" id="regno" name="car[name]" value="<%=car.regno %>">
        </div>
        <div class="form-group">
            <label for="make">Make</label>
            <input type="text" class="form-control" id="make" name="car[make]" value="<%=car.make %>">
        </div>
        <div class=" form-group">
            <label for="model">Model</label>
            <input type="text" class="form-control" id="model" name="car[model]" value="<%=car.model %>">
        </div>
        <div class="form-group">
            <label for="notes">Notes</label>
            <textarea class="form-control" id="notes" rows="3" name="car[notes]" value="<%=car.notes %>"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include ('../partials/footer') %>