<%- include ('../partials/header') %>
<section class="jumbotron text-center">
    <h1>Edit car</h1>
</section>
<div class="container">
    <form action="/customers/<%= customer._id %>/cars/<%= car._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="car[name]" value="<%=car.name %>">
        </div>
        <div class="form-group">
            <label for="name">Make</label>
            <input type="text" class="form-control" id="name" name="car[make]" value="<%=car.make %>">
        </div>
        <div class=" form-group">
            <label for="name">Model</label>
            <input type="text" class="form-control" id="name" name="car[model]" value="<%=car.model %>">
        </div>
        <div class=" form-group">
            <label for="name">Description</label>
            <input type="text" class="form-control" id="name" name="car[description]" value="<%=car.description %>">
        </div>
        <button type=" submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include ('../partials/footer') %>